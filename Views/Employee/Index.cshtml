@model IEnumerable<WebProject.Models.ViewEmployee>

@{
    ViewData["Title"] = "Employees";
}

<div>
    <h1>Employees</h1>
    <form asp-action="Index" method="get">
        <div class="form-group">
        <input type="text" id="query" name="query" placeholder="Type to search..." />
        <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <img src="@await item.GetProfilePictureAsync()" alt="Profile Picture" class="img-fluid" width="150" height="150">
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
